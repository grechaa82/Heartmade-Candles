{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "HeartmadeCandles.API"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    //"DefaultConnection": "Server=0.0.0.0:5432;Port=5432;Database=pg_db;User Id=postgres;Password=root",
    "DefaultConnection": "Server=db;Port=5432;Database=db;User Id=postgres;Password=root"
  },
  "JwtOptions": {
    "SecretKey": "225A1C21-1C94-4CB8-B8CE-D249FB9DAA0C",
    "ExpiryInMinutes": "10080",
    "Issuer": "https://localhost:5000",
    "Audience": "https://localhost:5000"
  }
}
