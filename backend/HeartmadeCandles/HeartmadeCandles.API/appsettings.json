{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "HeartmadeCandles.API"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "fake-postgres-connectionstrings"
  },
  "JwtOptions": {
    "SecretKey": "225A1C21-1C94-4CB8-B8CE-D249FB9DAA0C",
    "ExpirationOfAccessTokenInMinutes": "180",
    "ExpirationOfRefreshTokenInMinutes": "43200",
    "Issuer": "https://localhost:5000",
    "Audience": "https://localhost:5000"
  },
  "DatabaseSettings": {
    "ConnectionString": "fake-mongo-connectionstrings",
    "DatabaseName": "db"
  }
}
